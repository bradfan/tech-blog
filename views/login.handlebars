<h2>Login or Sign-Up</h2>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">User Name</label>
    <input class="form-input" type="text" id="user" value="Sal"/>
  </div>
  <div class="form-group">
    <label for="password-login">Password (must be at least six characters)</label>
    <input class="form-input" type="password" id="password" value="password12345"/>
  </div>
  <div class="form-group">
    <button id="login" class="btn btn-primary" type="submit">Current user? Login!</button>
  </div>
  <div class="form-group">
    <button id="signup" class="btn btn-primary" type="submit">Provide user name and password and Sign up!</button>
  </div>
</form>

<script src="/js/login.js"></script>



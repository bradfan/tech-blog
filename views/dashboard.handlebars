{{!-- will be for individual posts and replies --}}


{{#each posts}}
<div class="row align-center mb-5">
  <div class="form-group">

    <h2 id="post" data-user="{{this.id}}">{{this.name}}:</h2>
    <div id="title">
      <input class="submit-title" type="title" id="submit-title" value="{{this.title}}" />
    </div>

    <textarea class="form-input" maxlength="500">{{this.post}}</textarea>
    <button id="subpost" class="btn btn-primary" type="submit">Reply</button>
  </div>

</div>
{{/each}}

